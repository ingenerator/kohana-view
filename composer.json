{
    "name":        "ingenerator/kohana-view",
    "type":        "kohana-module",
    "description": "PHP class based views for the Kohana framework",
    "homepage":    "https://github.com/ingenerator/kohana-view",
    "license":     "BSD-3-Clause",
    "keywords":    ["kohana", "view-model"],
    "authors": [
        {
            "name":     "Andrew Coulton",
            "homepage": "https://github.com/acoulton",
            "role":     "developer / maintainer"
        },
        {
            "name":     "David Pommer",
            "homepage": "https://github.com/dyron",
            "role":     "original developer"
        },
        {
            "name":     "Jeremy Bush",
            "homepage": "https://github.com/zombor",
            "role":     "original developer"
        }
    ],
    "support": {
        "issues":   "https://github.com/ingenerator/kohana-view/issues",
        "source":   "https://github.com/ingenerator/kohana-view"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://php-packages.ingenerator.com"
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
        "ingenerator/kohana-core": "^4.9.0"
    },
    "require-dev": {
        "kohana/koharness": "dev-master",
        "mikey179/vfsstream": "^1.6.11",
        "ingenerator/kohana-dependencies": "^1.3.0",
        "phpunit/phpunit": "^9.5.5"
    },
    "suggest": {
        "ingenerator/kohana-dependencies": "Dependency Injection container for Kohana 3.x"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
